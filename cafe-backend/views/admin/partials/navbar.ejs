<link rel="stylesheet" href="/css/admin.css">
<style>
    body {
        margin: 0;
        font-family: "Poppins", sans-serif;
        background-color: #f4f6f8;
        display: flex;
        min-height: 100vh;
    }

    /* Sidebar */
    .sidebar {
        width: 250px;
        background: linear-gradient(180deg, #1e3a8a, #1e40af);
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        box-shadow: 2px 0 15px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        z-index: 1000;
        border-top-right-radius: 20px;
        border-bottom-right-radius: 20px;
        overflow: hidden;
    }

    .sidebar-header {
        text-align: center;
        padding: 30px 15px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        font-weight: 700;
        font-size: 1.5rem;
        letter-spacing: 0.5px;
        background: rgba(255, 255, 255, 0.05);
    }

    .sidebar-header i {
        margin-right: 10px;
        color: #fbbf24;
    }

    .nav-links {
        list-style: none;
        padding: 20px 0;
        margin: 0;
        flex: 1;
    }

    .nav-links li {
        margin: 8px 15px;
    }

    .nav-links a {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: #e5e7eb;
        padding: 12px 15px;
        border-radius: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .nav-links a i {
        font-size: 1.2rem;
        width: 25px;
        text-align: center;
    }

    .nav-links a:hover,
    .nav-links a.active {
        background: rgba(255, 255, 255, 0.15);
        color: #fff;
        transform: translateX(5px);
    }

    .nav-links a.active::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 4px;
        height: 100%;
        background: #fbbf24;
        border-radius: 0 4px 4px 0;
    }

    /* Profile Section */
    .sidebar-footer {
        padding: 20px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
    }

    .sidebar-footer a {
        display: flex;
        align-items: center;
        color: #f87171;
        text-decoration: none;
        font-weight: 500;
        gap: 8px;
        padding: 10px 15px;
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .sidebar-footer a:hover {
        background: rgba(255, 255, 255, 0.15);
    }

    .content {
        flex: 1;
        margin-left: 250px;
        padding: 30px;
    }

    /* Responsive for small screens */
    @media (max-width: 992px) {
        .sidebar {
            position: fixed;
            transform: translateX(-100%);
        }
        .sidebar.active {
            transform: translateX(0);
        }
        .content {
            margin-left: 0;
        }
    }
</style>

<nav class="sidebar">
    <div>
        <div class="sidebar-header">
            <i class="fas fa-utensils"></i> Admin Panel
        </div>
        <ul class="nav-links">
            <li>
                <a href="/admin/dashboard" class="<%= active==='dashboard'?'active':'' %>">
                    <i class="fas fa-home"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="/admin/categories" class="<%= active==='categories'?'active':'' %>">
                    <i class="fas fa-layer-group"></i> Categories
                </a>
            </li>
            <li>
                <a href="/admin/subcategories" class="<%= active==='subcategories'?'active':'' %>">
                    <i class="fas fa-list-ul"></i> Subcategories
                </a>
            </li>
            <li>
                <a href="/admin/items" class="<%= active==='items'?'active':'' %>">
                    <i class="fas fa-hamburger"></i> Food Items
                </a>
            </li>
            <li>
                <a href="/admin/users" class="<%= active==='users'?'active':'' %>">
                    <i class="fas fa-users"></i> Users
                </a>
            </li>
        </ul>
    </div>

    <div class="sidebar-footer">
        <a href="/admin/logout">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>
</nav>

<div class="content">
    <!-- Your admin page content goes here -->
   
</div>
