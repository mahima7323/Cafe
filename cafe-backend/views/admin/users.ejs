<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin.css">
    <style>
        body {
            background-color: #1e1e2f;
            color: #e5e7eb;
        }
        .card {
            background-color: #2a2a3d;
            color: #e5e7eb;
        }
        .table thead th {
            color: #fbbf24;
            border-bottom: 2px solid #fbbf24;
        }
        .table tbody tr {
            background-color: #2a2a3d;
        }
        .table tbody tr:hover {
            background-color: #3a3a50;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('partials/navbar', { active: 'users' }) %>

    <!-- Users Table -->
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="text-warning mb-4">Users List</h2>
                <table class="table table-hover align-middle text-light">
                    <thead class="table-light">
                        <tr>
                            <th class="text-primary fw-bold">Name</th>
                            <th class="text-primary fw-bold">Email</th>
                            <th class="text-primary fw-bold">City</th>
                            <th class="text-primary fw-bold">Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users.length > 0) { %>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td><%= user.name %></td>
                                    <td><%= user.email %></td>
                                    <td><%= user.city || '-' %></td>
                                    <td><%= user.address || '-' %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center text-muted">No users found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
